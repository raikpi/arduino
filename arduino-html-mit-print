client.print("<html>");
client.print("<head>");
client.print("<style>");
client.print("/* CSS-Styles */");
client.print(".container {");
client.print("/* Definition des Container-Styles */");
client.print("display: flex;");
client.print("/* Container wird als flex-Element dargestellt */");
client.print("justify-content: center;");
client.print("/* Kinder des Containers werden mittig ausgerichtet */");
client.print("align-items: center;");
client.print("/* Kinder des Containers werden vertikal mittig ausgerichtet */");
client.print("height: 100vh;");
client.print("/* Höhe des Containers wird auf den vollen Bildschirm angepasst */");
client.print("}");
client.print(".button {");
client.print("/* Definition des Button-Styles */");
client.print("padding: 10px 20px;");
client.print("/* Innenabstand des Buttons */");
client.print("font-size: 18px;");
client.print("/* Schriftgröße des Buttons */");
client.print("border-radius: 5px;");
client.print("/* Rundung des Buttons */");
client.print("text-align: center;");
client.print("/* Textausrichtung des Buttons */");
client.print("margin: 0 10px;");
client.print("/* Außenabstand des Buttons */");
client.print("}");
client.print(".button-left {");
client.print("/* Definition des Styles für den linken Button */");
client.print("background-color: red;");
client.print("/* Hintergrundfarbe des Buttons */");
client.print("color: white;");
client.print("/* Schriftfarbe des Buttons */");
client.print("float: left;");
client.print("/* Button wird links ausgerichtet */");
client.print("}");
client.print(".button-center {");
client.print("/* Definition des Styles für den mittleren Button */");
client.print("background-color: gray;");
client.print("/* Hintergrundfarbe des Buttons */");
client.print("color: white;");
client.print("/* Schriftfarbe des Buttons */");
client.print("}");
client.print(".button-right {");
client.print("/* Definition des Styles für den rechten Button */");
client.print("background-color: green;");
client.print("/* Hintergrundfarbe des Buttons */");
client.print("color: white;");
client.print("/* Schriftfarbe des Buttons */");
client.print("float: right;");
client.print("/* Button wird rechts ausgerichtet */");
client.print("}");
client.print("</style>");
client.print("</head>");
client.print("<body>");
client.print("<div class="container">");
client.print("<!-- Container für die Buttons -->");
client.print("<button class='button button-left' type='submit' onmousedown='location.href=\"/RH\"'>ON</button>");
client.print("<!-- Erster Button mit linker Ausrichtung, "ON"-Beschriftung und einer Funktion beim Klick (Weiterleitung zu "/RH") -->");
client.print("<button class='button button-center' type='submit' onmousedown='location.href=\"/RL\"'>OFF</button>");
client.print("<!-- Zweiter Button mit mittiger Ausrichtung, "OFF"-Beschriftung und einer Funktion beim Klick (Weiterleitung zu "/RL") -->");
client.print("<button class='button button-right' type='submit' onmousedown='location.href=\"/GH\"'>ON</button>");
client.print("<!-- Dritter Button mit mittiger Ausrichtung, "ON"-Beschriftung und einer Funktion beim Klick (Weiterleitung zu "/GH") -->");
client.print("</div>");
client.print("</body>");
client.print("</html>");
